<Window x:Class="WPF_DeckHouseLoad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DeckHouseLoad"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1530">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <DataGrid Grid.Row="0" x:Name="dgvCalc" SelectionUnit="CellOrRowHeader" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button x:Name="btnLoad" Margin="5" Click="btnLoad_Click" Width="100">Load</Button>
            <Button x:Name="btnSave" Margin="5" Click="btnSave_Click" Width="100">Save</Button>
            <Button x:Name="btnRefresh" Margin="5" Click="btnRefresh_Click" Width="100">Refresh</Button>
        </StackPanel>
    </Grid>
</Window>
